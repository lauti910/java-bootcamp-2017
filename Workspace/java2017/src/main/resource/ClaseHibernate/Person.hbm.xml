<?xml version="1.0" encoding="utf-8"?>
 <!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="bootcamp.java2017.ClaseHibernate.Model.Persons.Person"
		table="person">
		<id name="personID" type="java.lang.Integer">
			<column name="person_id" />
			<generator class="identity" />
		</id>
		<property name="firstName" type="string">
			<column name="first_name" length="25" not-null="true" />
		</property>
		<property name="lastName" type="java.lang.Integer">
			<column name="last_name" not-null="true" />
		</property>
		<property name="dateOfBirth" type="java.time.LocalDate">
			<column name="date_of_birth" not-null="true" />
		</property>
		
		<joined-subclass name= "bootcamp.java2017.ClaseHibernate.Model.Persons.Student" table= "student">
			<key column = "person_id"/>
			<property name= "registrationNumber" type= "java.lang.Integer">
				<column name= "reg_number" not-null="true"/>
			</property>
		</joined-subclass>
		<joined-subclass name= "bootcamp.java2017.ClaseHibernate.Model.Persons.Teacher" table="teacher">
			<key column = "person_id"/>
		</joined-subclass>
	</class>
</hibernate-mapping>