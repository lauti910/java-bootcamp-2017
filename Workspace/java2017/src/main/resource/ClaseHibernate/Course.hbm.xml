<?xml version="1.0" encoding="utf-8"?>
 <!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="bootcamp.java2017.ClaseHibernate.Model.Course"
		table="course">
		<id name="courseID" type="java.lang.Integer">
			<column name="course_id" />
			<generator class="identity" />
		</id>
		<property name="name" type="string">
			<column name="name" length="25" not-null="true" />
		</property>
		<property name="hoursByWeek" type="java.lang.Integer">
			<column name="hours_by_week" not-null="true" />
		</property>
		<many-to-one name="assignedTeacher"
			class="bootcamp.java2017.ClaseHibernate.Model.Persons.Teacher" fetch="select">
			<column name="assigned_teacher" not-null="true" />
		</many-to-one>
		<list name="scheduleTime" cascade="all">
			<key column="course_id" />
			<list-index column="idx" />
			<one-to-many class="bootcamp.java2017.ClaseHibernate.Model.Schedule" />
		</list>
		<map name="notes" cascade="all">
			<key column="course_id"/>
			<map-key-many-to-many column="student_id"
								class="bootcamp.java2017.ClaseHibernate.Model.Persons.Student"/>
			<composite-element class="bootcamp.java2017.ClaseHibernate.Model.Note" />
		</map>
	</class>
</hibernate-mapping>